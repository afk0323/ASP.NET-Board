<table class="table table-bordered">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
        </tr>
    </thead>
    <tbody>
        <!-- 몇개가 있는지는 모르겠지만 전부다 출력하겠다. -->
        <!-- controller에서 view안에 리스트나 객체를 넣으면, view에서는 전부 Model로 칭한다 -->
        
        @foreach(var note in Model){
            <tr>
                <td>@note.NoteNo</td>
                <td>
                    <a asp-controller="Note" asp-action="Detail" asp-route-noteNo="@note.NoteNo">@note.NoteTitle</a>
                </td>
                <td>@note.UserNo</td>
            </tr>
        }

    </tbody>
</table>


<a class="btn btn-warning" asp-controller="Note" asp-action="Add">게시물 작성</a>

